@model PortFolioSewar.Models.Contact
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<main id="main">
    <!-- ======= Contact Section ======= -->
    <section id="contact" class="contact">
        <div class="container">

            <div class="section-title">
                <h2>Contact</h2>
                <p></p>

                <div class="row" data-aos="fade-in">

                    @if (ViewBag.err != null)
                    {
                        <span class="text-danger">@ViewBag.err</span>
                    }
                    else
                    {
                        <span class="text-primary">@ViewBag.succ</span>
                    }

                    <div class="col-lg-7 mt-5 mt-lg-0 d-flex align-items-stretch">



                        <form asp-action="send" asp-controller="Contact" method="post" class="form-group row">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="row">
                                <div class="form-group col-md-6">
                                    <label asp-for="CName">Your Name</label>
                                    <input asp-for="CName" class="form-control" required>
                                    <span class="text-danger" asp-validation-for="CName"></span>
                                </div>
                                <div class="form-group col-md-6">
                                    <label asp-for="Email">Your Email</label>
                                    <input asp-for="Email" class="form-control" name="email" required>
                                    <span class="text-danger" asp-validation-for="Email"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="Subject">Subject</label>
                                <input asp-for="Subject" class="form-control" name="subject">
                                <span class="text-danger" asp-validation-for="Subject"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Message">Message</label>
                                <textarea class="form-control" asp-for="Message" rows="10"></textarea>
                                <span class="text-danger" asp-validation-for="Message"></span>

                            </div>



                            @*<div class="text-center"><button type="submit">Send Message</button></div>*@
                            <div>
                                <input type="submit" value=" Send Message" class="btn btn-outline-primary" />
                            </div>

                        </form>
                    </div>

                </div>

            </div>
        </div>
    </section><!-- End Contact Section -->

</main>